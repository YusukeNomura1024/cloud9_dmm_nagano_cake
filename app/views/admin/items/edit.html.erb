<div class="container edit-item">
  <div class="row my-5 justify-content-center">
    <div class="col-8">
      <h3 class="my-bg-lggray">商品編集</h3>
    </div>
  </div>
  <div class="row mt-5 justify-content-center">
    <div class="col-8">
      <%= form_with model: [:admin, @item],local: true do |f| %>
        <div class="form-group row">
          <%= f.label :image, '商品画像', class: "col-3 form-control-file my-auto" %>
          <%= f.attachment_field :image %>
        </div>

        <div class="form-group row">
          <%= f.label :name, '商品名', class: "col-3 my-auto" %>
          <%= f.text_field :name, placeholder: "商品名", class: "form-control col-6" %>
        </div>

        <div class="form-group row">
          <%= f.label :introduction, '商品説明', class: "col-3" %>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control col-6" %>
        </div>

        <div class="form-group row">
          <%= f.label :genre_id, 'ジャンル', class: "col-3 my-auto" %>
          <%= f.collection_select(:genre_id,
          Genre.all, :id, :name, {prompt: "--選択してください--"}, {class: "form-control col-6"}) %>
        </div>

        <div class="form-group row">
          <%= f.label :price, '税抜価格', class: "col-3 my-auto" %>
          <%= f.text_field :price, placeholder: "1000",class: "form-control col-6" %>円
        </div>

        <div class="row">
          <div class="col-3 my-auto">販売ステータス</div>
          <div class="col-6 pl-0">
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, "true", class: "form-check-input" %>
              <%= f.label :is_active, "販売中", value: "true", class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, "false", class: "ml-2 form-check-input" %>
              <%= f.label :is_active, "販売停止中", value: "false", class: "form-check-label" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-2 offset-5">
            <%= f.submit "変更を保存", class: "mt-3 btn btn-success" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
