<div class="container new-item">
  <div class="row mt-5 justify-content-center">
    <div class="col-8">
      <h3 class="my-bg-lggray">新規商品登録</h3>
    </div>
  </div>
  <div class="row mt-5 justify-content-center">
    <div class="col-8">
    <%= form_with model: [:admin, @item],local: true do |f| %>
      <div class="form-group row">
        <%= f.label :image, '商品画像',class: "col-3" %>
        <%= f.attachment_field :image, class: "col-6 pl-1 form-control-file" %>
        <div class="col-3"></div>
      </div>

      <div class="form-group row">
        <%= f.label :name, '商品名',class: "col-3" %>
        <%= f.text_field :name, placeholder: "商品名", class: "form-control col-6 pl-1" %>
        <div class="col-3"></div>
      </div>

      <div class="form-group row">
        <%= f.label :introduction, '商品説明',class: "col-3" %>
        <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control col-6 pl-1" %>
        <div class="col-3"></div>
      </div>

      <div class="form-group row">
        <%= f.label :genre_id, 'ジャンル',class: "col-3" %>
        <%= f.collection_select(:genre_id,
        Genre.all, :id, :name, {prompt: "--選択してください--"}, {class: "form-control col-6 pl-1"}) %>
        <div class="col-3"></div>
      </div>

      <div class="form-group row">
        <%= f.label :price, '税抜価格',class: "col-3" %>
        <%= f.text_field :price, placeholder: "1000", class: "form-control col-6 pl-1" %>円
        <div class="col-3"></div>
      </div>

      <div class="form-group row">
        <%= f.label :is_active, '販売ステータス',class: "col-3" %>
        <p class="col-6 d-inline-block pl-0">
          <%= f.radio_button :is_active, "true" %>
          <%= f.label :is_active, "販売中", value: "true", class: "mr-2" %>

          <%= f.radio_button :is_active, "false" %>
          <%= f.label :is_active, "販売停止中", value: "false" %>
        </p>
        <div class="col-3"></div>
      </div>
      <div class="row mt-2 justify-content-center">
        <div class="col-3"></div>
        <%= f.submit "新規登録", class: "col-3 btn btn-success" %>
        <div class="col-3"></div>
      </div>

    <% end %>
    </div>
  </div>
</div>
