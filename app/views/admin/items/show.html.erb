<div class="container">
  <div class="row justify-content-center my-5">
    <div class="col-8">
      <h3 class="my-bg-lggray">商品詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg',
      fallback: "no_image.jpg" %>
    </div>
    <div class="col-8">
      <table class="ml-3 show-item-table table table-borderless" id="border-less">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br>（税抜価格)</th>
          <td><b><%= @item.price.to_s(:delimited) %>(<%= @item.add_tax_price.to_s(:delimited) %>)</b>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td class="<%= @item.status_color %>"><b><%= @item.status_text %></b></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-5">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "offset-6 col-1 p-2 text-center btn btn-success" %>
  </div>
</div>
