<div class="container">
  <h3 class="my-bg-lggray my-5 ml-5">ジャンル編集</h3>
  <%= form_with model: @genre,url: admin_genre_path, local: true, class: "form-inline" do |f| %>
    <div class="form-group mr-5">
      <%= f.label :name, "ジャンル名", class: "mr-5" %>
      <%= f.text_field :name, class: "from-control" %>
    </div>
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  <% end %>
</div>