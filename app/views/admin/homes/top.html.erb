<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order)  %>
        </td>
        <td>
          <%= order.customer_full_name %>
        </td>
        <td>
          <%= order.item_total_count %>
        </td>
        <td>
          <%= order.status %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>