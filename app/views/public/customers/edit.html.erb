<div class="container">
  <div class="row my-5">
    <div class="col-8 offset-2">
      <h3 class="my-bg-lggray d-inline-block">会員情報編集</h3>
    </div>
  </div>
  <%= form_with model: @customer, local: true do |f| %>

  <div class="form-group row">
    <label class="col-2 align-self-center">氏名</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", class: "form-control col-2 align-self-center" %>
    <%= f.text_field :first_name, autocomplete: "given-name", class: "form-control col-2 ml-5" %>
  </div>

  <div class="form-group row">
    <label class="col-2 align-self-center">フリガナ</label>
    <%= f.text_field :last_name_kana, class: "form-control col-2 align-self-center" %>
    <%= f.text_field :first_name_kana, class: "form-control col-2 ml-5" %>
  </div>

  <div class="form-group row">
    <%= f.label :postal_code, '郵便番号', class: "col-2 align-self-center" %>
    <%= f.text_field :postal_code, autocomplete: "postal-code", class: "form-control col-2" %>
  </div>

  <div class="form-group row">
    <%= f.label :address, '住所', class: "col-2 align-self-center" %>
    <%= f.text_field :address, class: "form-control col-7" %>
  </div>

  <div class="form-group row">
    <%= f.label :telephone_number, '電話番号', class: "col-2 align-self-center" %>
    <%= f.text_field :telephone_number, class: "form-control col-2" %>
  </div>

  <div class="form-group row">
    <%= f.label :email, 'メールアドレス', class: "col-2 align-self-center" %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control col-2" %>
  </div>

  <div class="row mt-5">
    <div class="offset-2 col-5 pl-0">
      <%= f.submit "変更内容を保存", class: "btn btn-success w-50" %>
    </div>

    <div class="">
      <%= link_to '退会する', customer_unsubscribe_path, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>

</div>
