<h2>ショッピングカート</h2>
<%= link_to 'カートを空にする', cart_items_path, method: :delete,
data: { confirm: 'カートを空にしますか？'} %>
<table>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
      <td>
        <%= cart_item.amount %>
        <%= form_with model: cart_item, local: true do |f| %>
          <%= f.select :amout, *[1..10], include_blank: "#{cart_item.amount}" %>
          <%= f.submit "変更" %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete,
      data: { confirm: '削除しますか？' } %></td>
      <% @total_price += cart_item.subtotal %>
    <% end %>
  </tbody>
</table>
<%= link_to '買い物を続ける', items_path %>
<div>
  <div>合計金額</div>
  <div><%= @total_price.to_s(:delimited) %></div>
</div>
<%= link_to '情報入力に進む　URL未完成', "" %>