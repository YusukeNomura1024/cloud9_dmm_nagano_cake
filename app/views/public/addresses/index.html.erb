<div class="container">
  <div class="row">
    <div class="col">
      <h3>配送先登録/一覧</h3>
    </div>
  </div>
  <%= form_with model: @address, local: true do |f| %>
  <div class="row">
    <div class="col">
      <div class="form-group row">
        <%= f.label :postal_code, '郵便番号（ハイフンなし）', class: "col-3" %>
        <%= f.text_field :postal_code, class: "form-control col-4" %>
      </div>
      <div class="form-group row">
        <%= f.label :address, '住所', class: "col-3" %>
        <%= f.text_field :address, class: "form-control col-4" %>
      </div>
      <div class="form-group row">
        <%= f.label :name, "宛名", class: "col-3" %>
        <%= f.text_field :name, class: "form-control col-4" %>
      </div>
    </div>
    <div class="col">
      <%= f.submit "新規登録" %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to '編集する', edit_address_path(address.id) %>
              <%= link_to '削除する', address_path(address.id), method: :delete, data: {confirm: "削除しますか?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>