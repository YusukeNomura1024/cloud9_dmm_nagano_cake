<div class="container">
  <div class="row my-5">
    <div class="col">
      <h3 class="my-bg-lggray">配送先登録/一覧</h3>
    </div>
  </div>

  <%= render "form", address: @address, submit_text: @submit_text %>

  <div class="row mt-5">
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th style="width: 15%;">郵便番号</th>
            <th style="width: 50%;">住所</th>
            <th style="width: 15%;">宛名</th>
            <th style="width: 15%;"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <div class="d-flex">
              <%= link_to '編集する', edit_address_path(address.id), class: "btn btn-sm btn-success text-nowrap" %>
              <%= link_to '削除する', address_path(address.id), method: :delete, data: {confirm: "削除しますか?"}, class: "btn btn-sm btn-danger text-nowrap ml-3" %>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>