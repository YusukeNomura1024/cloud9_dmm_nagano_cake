<% if flash[:error] %>
  <div class="alert alert-danger" role="alert" id="error"><%= flash[:error] %></div>
<% end %>
<div class="container">
  <div class="my-5">
    <h3 class="my-bg-lggray d-inline-block">ログイン</h3>
  </div>
  <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
  <div class="row mb-3 pl-5">
    <h4 class="my-bg-lggray mb-4">会員の方はこちらからログイン</h4>
  </div>
  <div class="form-group pl-5 ml-5 row">
    <%= f.label :email, 'メールアドレス', class: "col-2 align-self-center" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "col-5 form-control" %>
  </div>

  <div class="form-group pl-5 ml-5 row">
    <%= f.label :password, 'パスワード', class: "col-2 align-self-center" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "col-5 form-control" %>
  </div>

  <div class="actions pl-5 ml-5 my-5 row">
    <%= f.submit "ログイン", class: "offset-2 col-2 btn btn-primary" %>
  </div>
  <% end %>

  <div class="row pl-5 mb-4">
    <h4 class="my-bg-lggray">会員登録がお済でない方</h4>
  </div>
  <div class="row pl-5 ml-5">
    <%= link_to "こちら", new_registration_path(resource_name), class: "ml-5 text-underline" %>　から新規登録を行ってください
  </div>
</div>